            android:textColor="#000" />

        <ImageView
            android:id="@+id/cpv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:background="@drawable/cpv" />


        <TextView
