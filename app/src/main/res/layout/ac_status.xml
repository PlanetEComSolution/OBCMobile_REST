<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusableInTouchMode="true"
    >

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#4bb134"
        android:focusableInTouchMode="true">
        <Button
            android:id="@+id/textView1"
            android:layout_width="36dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/logo"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="25dp" />

    </RelativeLayout>


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rl_top"
        android:paddingBottom="10dp"
        android:background="#aef49e"
        android:scrollbars="none"

        android:scrollbarStyle="insideOverlay">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="15dp"

                android:paddingRight="15dp"
                android:paddingTop="15dp">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:hint="Name"
                    android:text="Complaint Status"
                    android:background="#4bb134"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:textSize="20dp"
                    android:textColor="#ffff"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:focusableInTouchMode="true"
                    />

                <EditText
                    android:id="@+id/s"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="70dp"
                    android:background="@drawable/shape1"
                    android:ems="10"
                    android:hint="Enter your Complaint reference no"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:textSize="@dimen/edittextnormal"
                    android:focusableInTouchMode="true"
                    >
                    <requestFocus />
                </EditText>
                <Button
                    android:id="@+id/register"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:padding="5dp"
                    android:text="Submit"
                    android:background="#4bb134"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/edittextnormal" />
                <TextView

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:text="Please enter your compaint reference no as . eg. APP1234/2008-09"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:textSize="@dimen/edittextnormal"
                    android:focusableInTouchMode="true"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>